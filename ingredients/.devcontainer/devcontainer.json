{
  "name": "Methoden der Bioinformatik, Docker image for Python",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "jupyter.kernels.filter": [
          {
            "path": "/usr/local/bin/python"
          }
        ],
        "files.exclude": {
          ".*/": true,
          ".*": true
        }
      }
    }
  }
}
